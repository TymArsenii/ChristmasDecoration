void circles()
{
  if (millis() - circles_timer >= CIRCLES_RATE)
  {
    circles_timer = millis();
    circle_size++;
    if (circle_size > 5)
    {
      circle_size = 1;
    }

    for (uint8_t x = 1; x <= 8; x++)
    {
      for (uint8_t y = 1; y <= 8; y++)
      {
        switch (circle_size)
        {
          case 1:
            matrix_container[x][y] = circle_1[x][y];
            break;
          case 2:
            matrix_container[x][y] = circle_2[x][y];
            break;
          case 3:
            matrix_container[x][y] = circle_3[x][y];
            break;
          case 4:
            matrix_container[x][y] = circle_4[x][y];
            break;
          case 5:
            matrix_container[x][y] = mt_empty[x][y];

            loop_amount++;

            if (loop_amount == 3)
            {
              //loop_amount = 0;
              uint8_t flash_delay = 100;
              for (uint8_t blinks_amount = 0; blinks_amount < 5; blinks_amount++)
              {
                matrix.fill();
                matrix.update();
                delay(flash_delay);
                matrix.clear();
                matrix.update();
                delay(flash_delay);
              }
              circle_size = 0;
              break;
            }
        }
      }
    }
  }
}